function addition(a, b, c) --handles addition
  if (true)
  then
    c = a + b
    result = c
  end
  return result
end

function subtraction(a, b, c) -- handles subtraction
    if (true)
    then
        c = a - b
        result = c
    end
    return result
end

function multiplication(a, b, c) -- handles multiplication
    if (true)
    then
        c = a * b
        result = c
    end
    return result
end

function division(a, b, c) --handles division
    if (true)
    then
        c = a / b
        result = c
    end
    return result
end

local simple, complex, b, a
------------------------------------------------------------------------------------------------------------------------------------

--                  ---- Config ----                   --
 --                                                   --
---------------------------------------------------------
 simple  = 0  --   0 =       Addition    1 = Subtraction
 complex = 0  --   0 = Multiplication    1 = Division
 a = 0  -- bigger number
 b = 0   -- smaller number
---------------------------------------------------------



------------------------------------------------------------------------------------------------------------------------------------
-- Addition / Subtraction will be executed first
if simple == 0
then
  print("Addition result:", addition(a, b, 0)) -- add
  else
    print("Subtraction result:",subtraction(a, b, 0)) -- subtract
end
if complex == 0
then
  print("Multiplication result:", multiplication(a, b, 0)) -- multiply
  else
    print("Division result:", division(a, b, 0)) -- divide
end
------------------------------------------------------------------------------------------------------------------------------------


-- Instructions: replace a with largest number of the two and replace b with the smallest number LEAVE C ALONE!!! specify value of a (1 and 0) and then specify b (1 and 0) 0 does additive operations and 1 does subtractive operations. the result will be printed in the output
-- This is for basic operations such as addition and division


